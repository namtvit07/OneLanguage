- owner_msg = "" if !owner_msg
- translator_msg = "" if !translator_msg
- partner_msg = "" if !partner_msg
- from_owner = true if from_owner.nil?
- message_time_owner = message_time_partner = Time.now
%tr{class: "#{from_owner ? 'from-owner' : 'from-partner'}"}
  %td.owner-td
    - if owner_msg.present?
      .message-content
        .arrow
        = owner_msg
      .message-time
        = message_time_owner
  %td.translator-td
    - if @translator
      .message-content
        .arrow
        %textarea{placeholder: "Enter translated text ...", disabled: !translator_msg.blank?}
          = translator_msg

  %td.partner-td
    - if partner_msg.present?
      .message-content
        .arrow
        = partner_msg
      .message-time
        = message_time_partner