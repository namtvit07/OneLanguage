.row
  /Owner information
  .col.col-md-4.text-left
    &nbsp;
    .clearfix
    = image_tag @owner_acc.avatar.url(:small), class: "thumbnail-img owner-avatar #{@owner_acc.id == current_user.id ? "online" : ""}", id: "avatar-#{@channel.owner_id}"
    .clearfix
    = @owner_acc.name
  .col.col-md-4.text-center
    - if @translator_acc
      %i.fa.fa-comments-o
      .clearfix
      = image_tag @translator_acc.avatar_url, class: "thumbnail-img translator-avatar #{@translator_acc.id == current_user.id ? "online" : ""}", id: "avatar-#{@channel.translator_id}"
      .clearfix
      = @translator_acc.name
    - else
      .invite-button
        %button.btn.btn-primary(data-toggle="modal" data-target="#translator-invite-modal")
          Invite Translator
  .col.col-md-4.text-right
    - if @partner_acc
      &nbsp;
      .clearfix
      = image_tag @partner_acc.avatar_url, class: "thumbnail-img partner-avatar #{@partner_acc.id == current_user.id ? "online" : ""}", id: "avatar-#{@channel.partner_id}"
      .clearfix
      = @partner_acc.name
    - else
      .invite-button
        %button.btn.btn-primary(data-toggle="modal" data-target="#parner-invite-modal")
          Invite Partner

= render "invitation_modal"

