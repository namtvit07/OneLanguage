.navbar.navbar-inverse.navbar-fixed-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/")
      = image_tag "logo.png", class: 'logo-img'
    .navbar-collapse.collapse.navbar-responsive-collapse.text-center
      %ul.nav.navbar-nav
      = yield :channel_name
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "javascript:void(0)"}
              = image_tag current_user.avatar.url, class: 'avatar-img'
              = current_user.name
              %ul.dropdown-menu
                %li
                  = link_to "Settings", edit_user_registration_path
                %li
                  = link_to "Payment", "/payment"
                %li
                  = link_to "Sign Out", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Sign in", new_user_session_path