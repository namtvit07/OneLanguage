<% if (isOnLeftSide){ %>
  <tr class="from-partner edit-message" data-id="<%= message.message_ref %>" id="<%= message.message_ref %>">
    <td class="owner-td">
      <div class="message-content"><div class="arrow"></div>
        <span class="plain-text old-text"><%= message.old_content %></span>
        <span class="transition-arrow"> -> </span>
        <span class="plain-text new-text"><%= message.new_content %></span>
      </div>
      <div class="message-time"><%= timeAgo(message.message_ref) %></div>
    </td>
    <td class="translator-td"></td>
    <td class="partner-td"></td>
  </tr>
<% } else { %>
  <tr class="from-owner edit-message" data-id="<%= message.message_ref %>" id="<%= message.message_ref %>">
    <td class="owner-td"></td>
    <td class="translator-td"></td>
    <td class="partner-td">
      <div class="message-content"><div class="arrow"></div>
        <span class="plain-text old-text"><%= message.old_content %></span>
        <span class="transition-arrow"> -> </span>
        <span class="plain-text new-text"><%= message.new_content %></span>
      </div>
      <div class="message-time"><%= timeAgo(message.message_ref) %></div>
    </td>
  </tr>
<% } %>